<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs175.babysactivities.RegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Baby's Information"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:srcCompat="@drawable/babyface" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Name *:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="Baby's Name"
            android:inputType="textCapWords"
            android:id="@+id/edit_name"
            />
        <requestFocus/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Birthday *:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:hint="mm/dd/yyyy"
            android:gravity="center"
            android:focusable="false"
            android:clickable="true"
            android:editable="false"
            android:id="@+id/edit_birthday"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Weight:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:inputType="date"
            android:hint="Baby's weight"
            android:gravity="center"
            android:id="@+id/edit_weight"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Height:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:inputType="date"
            android:hint="Baby's height"
            android:gravity="center"
            android:id="@+id/edit_height"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/register_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By Loan Vo @ USA 2017"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="50dp"
            />




</LinearLayout>


</android.support.constraint.ConstraintLayout>
